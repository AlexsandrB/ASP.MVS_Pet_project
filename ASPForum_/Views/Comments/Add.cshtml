@model ASPForum_.Models.CommentsAdministrationModels.AddCommentModel

@{
    ViewBag.Title = "Add comment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="addCommentView">

    @using (Html.BeginForm("Add", "Comments", null, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <h3>Comment</h3>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.TopicHeader, new { @class = "form-control" })
            @Html.TextBoxFor(m => m.TopicId, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Content, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Add" />
            </div>
        </div>
    }
</section>

